{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "moduleResolution": "node",
    "noImplicitAny": false,
    "strictFunctionTypes": false,
    "strictNullChecks": false,
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
  },
  "exclude": [
    "node_modules/",
    "build/",
    "coverage/"
  ],
  "include": [
    "src"
  ]
}
